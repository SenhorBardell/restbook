<h1>Города</h1>

<p>
    <%= link_to 'Back', '/manager' %>
    <%= link_to 'New', new_manager_city_path %>
</p>

<ul>
    <% @cities.each do |city| %>
        <li>
            <%= city.id %>,
            <%= city.name %>,
            <%= link_to 'Edit', edit_manager_city_url(city) %>
            <%= link_to 'Delete', manager_city_url(city), data: {confirm: 'Are you sure'},
                        method: :delete %>
        </li>
    <% end %>
</ul>