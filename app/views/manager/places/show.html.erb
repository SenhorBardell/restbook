<% prefix = 'https://s3-eu-west-1.amazonaws.com/elasticbeanstalk-eu-west-1-719074273155/img/' %>

<h1>Place <%= @place.name %></h1>

<%= link_to 'Главная', manager_places_path %> |
<%= link_to 'Изменить', edit_manager_place_path %> |
<%= link_to 'Столики' %> |
<%= link_to 'Отзывы' %>

<dl>
    <dt>Тип</dt>
    <dd><%= @place.place_type %></dd>

    <dt>Имя</dt>
    <dd><%= @place.name %></dd>

    <dt>Описание</dt>
    <dd><%= @place.desc %></dd>

    <dt>Адрес</dt>
    <% city = @place.city ? @place.city.name : nil %>
    <dd><%= "#{city} #{@place.street} #{@place.building}" %></dd>

    <dt>Телефон</dt>
    <dd><%= @place.phone %></dd>

    <dt>Логин</dt>
    <dd><%= @place.login %></dd>

    <dt>Пароль</dt>
    <dd><i>Пароль скрыт</i> | <a id="reset-pass" href="#">Новый пароль</a></dd>

    <dt>Гео</dt>
    <dd><%= "#{@place.long} #{@place.lat}" %></dd>

    <dt>Время работы</dt>
    <% @place.hours.each do |hour| %>
        <dd><%= "#{hour[0]}: #{hour[1][0]}, #{hour[1][1]}" %></dd>
    <% end %>

    <dt>Флаги</dt>
    <% @place.flags.map do |flag| %>
        <dd><%= flag %></dd>
    <% end unless @place.flags.blank? %>

    <dt>Логин</dt>
    <dd><%= @place.login %></dd>

    <dt>Лого</dt>
    <dd><%= image_tag(prefix + @place.logo) unless @place.logo.blank? %></dd>

    <dt>Изображение</dt>
    <dd><%= image_tag(prefix + @place.img) unless @place.img.blank? %></dd>

</dl>
